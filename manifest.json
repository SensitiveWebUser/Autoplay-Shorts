{
  "name": "Autoplay Shorts",
  "description": "Autoplays YouTube shorts video after end of video",
  "homepage_url": "https://alexander-hornsby.uk/",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "64": "icons/64x64.png",
    "128": "icons/128x128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/shorts/*"
  ]
}